<div class="bg-sky-600 py-3"><h2 class="flex justify-center text-xl text-gray-200">LOG IN</h2></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field bg-white">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"border-none focus:ring-0" %>
  </div>

  <div class="field bg-white">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"border-none focus:ring-0" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>